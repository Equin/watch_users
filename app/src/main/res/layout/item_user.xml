<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout_user_item"
        android:background="@drawable/background_uset_item_selectors">

    <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/imageView_user_item_avatar"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:transitionName="imageView_user_item_avatar"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/ic_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/textView_user_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_marginStart="16dp"
            android:transitionName="textView_user_full_name"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintTop_toTopOf="@+id/imageView_user_item_avatar"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_user_item_avatar"
            app:layout_constraintStart_toEndOf="@+id/imageView_user_item_avatar"
            tools:text="User name" android:textAlignment="center"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
